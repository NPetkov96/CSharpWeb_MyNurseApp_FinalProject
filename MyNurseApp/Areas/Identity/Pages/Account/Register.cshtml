@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row">
        <!-- Main registration form -->
        <div class="col-md-6">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Username -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" placeholder="Username" />
                    <label asp-for="Input.Username">Username</label>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Nurse checkbox -->
                <div class="form-check mb-3">
                    <input asp-for="Input.IsNurse" class="form-check-input" id="nurseCheckbox" />
                    <label asp-for="Input.IsNurse" class="form-check-label">Register as a nurse</label>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Register</button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('nurseCheckbox').addEventListener('change', function () {
            const nurseForm = document.getElementById('nurseForm');
            if (this.checked) {
                nurseForm.style.display = 'block';
            } else {
                nurseForm.style.display = 'none';
            }
        });
    </script>
}
