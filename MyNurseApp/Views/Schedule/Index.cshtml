@using MyNurseApp.Web.ViewModels.HomeVisitation
@model IEnumerable<HomeVisitationViewModel>

@{
    ViewData["Title"] = "Scheduled Home Visitations";
}

<h2>Scheduled Home Visitations</h2>

@if (Model == null || !Model.Any())
{
    <p>There are no scheduled home visitations at this moment.</p>
    <p>If you would like to request a home visitation, please click the button below:</p>
    <a asp-controller="Manipulations" asp-action="Index" class="btn btn-primary">
        Request Home Visitation
    </a>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Date and Time</th>
                <th>Payment Method</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)
            {
                <tr>
                    @* <td>@schedule.PatientName</td> *@
                    <td>@schedule.DateTimeManipulation.ToString("g")</td>
                    <td>@schedule.PaymentMethod</td>
                    <td>@schedule.PriceForVisitation.ToString("C")</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@schedule.Id">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@schedule.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
