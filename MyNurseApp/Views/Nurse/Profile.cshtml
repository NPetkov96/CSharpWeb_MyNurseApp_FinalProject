@using MyNurseApp.Web.ViewModels.NurseProfile
@model NurseProfileViewModel

@{
    ViewData["Title"] = "My Nurse Profile";
}

<div class="container mt-4">
    <h1 class="text-center">My Nurse Profile</h1>

    @if (Model == null)
    {
        <div class="alert alert-warning text-center mt-3" style="color: #856404; background-color: #fff3cd; border-color: #ffeeba;">
            <p style="font-size: 1.2rem;">Your dont have registrated profile.</p>
            <a asp-action="CreateNurseProfile" class="btn btn-primary btn-sm">Add Profile</a>
        </div>
    }
    else
    {
        <div class="card mx-auto shadow-sm" style="max-width: 600px;">
            <div class="card-body">
                <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                <p class="card-text">
                    <strong>Phone:</strong> @Model.PhoneNumber <br />
                    <strong>Experience:</strong> @Model.YearsOfExperience years <br />
                    <strong>Education:</strong> @Model.Education
                </p>
                <button class="btn btn-link text-primary p-0" type="button" data-bs-toggle="collapse" data-bs-target="#details-@Model.Id" aria-expanded="false" aria-controls="details-@Model.Id">
                    View More Details
                </button>
                <div class="collapse mt-2" id="details-@Model.Id">
                    <p>
                        @if (!string.IsNullOrEmpty(Model.Recommendations))
                        {
                            <strong>Recommendations:</strong> @Model.Recommendations
                        }
                    </p>
                </div>
            </div>
        </div>
    }
</div>
