@model MyNurseApp.Web.ViewModels.HomeVisitation.HomeVisitationViewModel

<h2>Schedule Home Visitation</h2>

<form asp-action="CreateHomeVisitation" method="post">
    <!-- Date and Time Manipulation -->
    <div class="form-group">
        <label asp-for="DateTimeManipulation">Date and Time for Manipulation</label>
        <input asp-for="DateTimeManipulation" type="datetime-local" class="form-control" id="dateTimeManipulation" />
        <span asp-validation-for="DateTimeManipulation" class="text-danger"></span>
    </div>

    <!-- Payment Method -->
    <div class="form-group">
        <label asp-for="PaymentMethod">Payment Method</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="0">Card</option>
            <option value="1">Cash</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <!-- Note -->
    <div class="form-group">
        <label asp-for="Note">Additional Notes</label>
        <textarea asp-for="Note" class="form-control" rows="4" maxlength="500"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <!-- Price for Visitation -->
    <div class="form-group">
        <label asp-for="PriceForVisitation">Price</label>
        <input asp-for="PriceForVisitation" type="number" class="form-control" readonly />
        <span asp-validation-for="PriceForVisitation" class="text-danger"></span>
    </div>

    <!-- IsHomeVisitationConfirmed -->
    <input type="hidden" asp-for="IsHomeVisitationConfirmed" />

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dateTimeInput = document.querySelector("[name='DateTimeManipulation']");
            const priceInput = document.querySelector("[name='PriceForVisitation']");
            const basePrice = 20;

            // Set the minimum date to today's date and time
            const today = new Date();
            const isoDate = today.toISOString().slice(0, 16); // Format as yyyy-MM-ddTHH:mm
            dateTimeInput.min = isoDate;

            dateTimeInput.addEventListener("change", function () {
                const selectedDateTime = new Date(dateTimeInput.value);

                // Check if a specific time is selected (non-default)
                if (selectedDateTime.getHours() || selectedDateTime.getMinutes()) {
                    priceInput.value = basePrice + 20; // Add extra charge
                } else {
                    priceInput.value = basePrice; // Default price
                }
            });
        });
    </script>
}
