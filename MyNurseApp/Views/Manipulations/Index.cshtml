@using MyNurseApp.Web.ViewModels.Manipulations
@model IEnumerable<MedicalManipulationsViewModel>

@{
    ViewData["Title"] = "Medical Manipulations";
    ViewData["ManipulationSum"] = 0;
}

<h2>Manipulations</h2>

@if (Model == null || !Model.Any())
{
    <p>No manipulations available.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manipulation in Model)
            {
                <tr>
                    <td>@manipulation.Name</td>
                    <td>@manipulation.Description</td>
                    <td>@manipulation.Price.ToString("C")</td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <form asp-action="EditManipulation" asp-route-id="@manipulation.Id" method="get" style="display:inline;">
                                <button class="btn btn-warning btn-sm" type="submit">Edit</button>
                            </form>
                            <form asp-action="RemoveManipulation" asp-route-id="@manipulation.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?')" style="display:inline;">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="AddToSelection" asp-route-id="@manipulation.Id" method="post" style="display:inline;">
                                <button class="btn btn-primary btn-sm" type="submit">Choose</button>
                            </form>

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Selected Manipulations</h3>
    @if (ViewBag.SelectedManipulations != null && ((List<MyNurseApp.Web.ViewModels.Manipulations.MedicalManipulationsViewModel>)ViewBag.SelectedManipulations).Any())
    {
        decimal totalSum = 0;
        <ul>
            @foreach (var manipulation in (List<MedicalManipulationsViewModel>)ViewBag.SelectedManipulations)
            {
                <li>@manipulation.Name - @manipulation.Price.ToString("C")</li>
                totalSum += manipulation.Price;
            }
        </ul>
        <p><strong>Total Sum:</strong> @totalSum.ToString("C")</p>
        <form asp-action="ClearSelection" method="post">
            <button type="submit" class="btn btn-danger btn-sm">Clear Selection</button>
        </form>
    }
    else
    {
        <p>No manipulations selected.</p>
    }

    @if (!User.IsInRole("Admin") && !User.IsInRole("Nurse"))
    {
        <div class="mt-2">
            <a class="btn btn-primary" asp-action="SaveSelection">Book home visitation</a>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="mt-3">
            <a class="btn btn-success" asp-action="AddManipulation">Add New Manipulation</a>
        </div>
    }
}
