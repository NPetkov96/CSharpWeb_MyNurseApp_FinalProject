@using MyNurseApp.Web.ViewModels.Manipulations
@model IEnumerable<MedicalManipulationsViewModel>

@{
    ViewData["Title"] = "Medical Manipulations";
}

<h2>Manipulations</h2>

@if (Model == null || !Model.Any())
{
    <p>No manipulations available.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manipulation in Model)
            {
                <tr>
                    <td>@manipulation.Name</td>
                    <td>@manipulation.Description</td>
                    <td>@manipulation.Price.ToString("C")</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Select" asp-route-id="@manipulation.Id">Select</a>

                        @if (User.IsInRole("Admin"))
                        {
                            @* <a class="btn btn-warning btn-sm" asp-action="EditManipulation" asp-route-id="@manipulation.Id">Edit</a> *@
                            <form asp-action="EditManipulation" asp-route-id="@manipulation.Id" method="get" style="display:inline;">
                                <button class="btn btn-warning btn-sm" type="submit">Edit</button>
                            </form>
                            <form asp-action="RemoveManipulation" asp-route-id="@manipulation.Id" method="post" style="display:inline;">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (User.IsInRole("Admin"))
    {
        <div class="mt-3">
            <a class="btn btn-success" asp-action="AddManipulation">Add New Manipulation</a>
        </div>
    }
}
