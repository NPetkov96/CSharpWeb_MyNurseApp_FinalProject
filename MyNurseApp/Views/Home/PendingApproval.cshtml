@{
    ViewData["Title"] = "Pending Approval";
}

<div class="container mt-5" style="background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="alert alert-info text-center">
        <h1 class="text-primary" style="font-weight: bold; font-size: 2.5rem;">Your Account is Pending Approval</h1>
        <p class="mt-4" style="font-size: 1.2rem; color: #333;">
            Thank you for registering with MyNurseApp. Your account is currently awaiting approval by an administrator.
            Please note that registering a profile as a medical professional is required.
        </p>
        <p class="mt-4" style="font-size: 1.2rem; color: #333;">
            If you have already created your profile, we kindly ask for your patience while we process your information.
        </p>
        <a href="/Nurse/CreateNurseProfile" class="btn btn-primary mt-3" style="font-size: 1.2rem; padding: 10px 20px; border-radius: 5px;">Create Your Profile</a>
    </div>
</div>
